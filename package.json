{
  "name": "archigram.ai",
  "version": "1.0.0",
  "description": "AI-powered architecture diagramming tool. Describe your system, get production-ready diagrams.",
  "type": "module",
  "license": "MIT",
  "author": {
    "name": "Timur Isachenko",
    "url": "https://github.com/isatimur"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/isatimur/archigram.ai.git"
  },
  "bugs": {
    "url": "https://github.com/isatimur/archigram.ai/issues"
  },
  "homepage": "https://archigram-ai.vercel.app",
  "keywords": [
    "diagram",
    "architecture",
    "ai",
    "mermaid",
    "plantuml",
    "bpmn",
    "system-design",
    "gemini",
    "visualization"
  ],
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "lint": "eslint . --ext .ts,.tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,json,md,css,html}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,md,css,html}\"",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "prepare": "husky",
    "validate": "bun run type-check && bun run lint && bun run test:run",
    "ci": "bun run type-check && bun run lint && bun run format:check && bun run test:run",
    "cli": "bun run cli/index.ts",
    "mcp-server": "bun run mcp-server/index.ts"
  },
  "dependencies": {
    "@google/genai": "1.37.0",
    "@iconify-json/fa6-regular": "1",
    "@iconify-json/fa6-solid": "1",
    "@iconify-json/logos": "1",
    "@iconify-json/material-symbols": "1",
    "@modelcontextprotocol/sdk": "^1.25.3",
    "@plausible-analytics/tracker": "^0.4.4",
    "@sentry/react": "^10.38.0",
    "@supabase/supabase-js": "2.39.3",
    "@vercel/og": "^0.8.6",
    "bpmn-js": "^18.10.1",
    "lucide-react": "0.469.0",
    "lz-string": "1.5.0",
    "mermaid": "11.12.2",
    "pako": "2.1.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.6.0",
    "@types/node": "^22.14.0",
    "@types/pako": "^2.0.3",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "@vercel/node": "^5.5.28",
    "@vitejs/plugin-react": "^5.0.0",
    "@vitest/coverage-v8": "^3.0.4",
    "@vitest/ui": "^3.0.4",
    "eslint": "^9.19.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.1.0",
    "husky": "^9.1.7",
    "jsdom": "^26.0.0",
    "lint-staged": "^15.4.3",
    "prettier": "^3.4.2",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "vitest": "^3.0.4"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css,html}": [
      "prettier --write"
    ]
  }
}
